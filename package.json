{
  "name": "mpa-web-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "test": "jest --config=./jest.config.js --coverage=true --passWithNoTests",
    "test:watch": "jest --config=./jest.config.js --coverage=true --passWithNoTests --watchAll",
    "clean": "npx rimraf dist",
    "lint:js": "eslint 'pages/**/*.{js,ts}' --fix",
    "lint:css": "stylelint 'pages/**/*.css' -c=stylelint.config.js --quiet-deprecation-warnings",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "dependencies": {
    "core-js": "^3.36.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.23.9",
    "@types/core-js": "^2.5.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "postcss": "^8.4.35",
    "postcss-html": "^1.6.0",
    "pre-push": "^0.1.4",
    "prettier": "^3.2.5",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-babel": "^1.2.0",
    "vite-plugin-full-reload": "^1.2.0"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "pre-push": [
    "test",
    "lint:js",
    "lint:css"
  ]
}